{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .parallax {
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="parallax" style="background-image: url('{{ asset('assets/test-bg.jpg') }}');">
    <div class="text-white py-20 text-center">
        <div class="container mx-auto">
            <h1 class="text-5xl font-extrabold mb-6 leading-tight text-blue-900">
                Contactez <span class="text-blue-400">LinkEat</span>
            </h1>
            <p class="text-xl mb-8 text-blue-900">Une question ? Besoin d'aide ? Écrivez-nous !</p>
            <a href="{{ path('app_sign_up') }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-8 rounded-full transition duration-300 ease-in-out transform hover:-translate-y-1 shadow-lg">Rejoignez-nous</a>
        </div>
    </div>
</div>


    <div class="max-w-7xl mx-auto mt-8 px-4 lg:px-0 flex flex-wrap">
        <!-- Contact Form Section -->
        <div class="w-full lg:w-1/2 mb-8 lg:mb-0 lg:pr-4">
            <div class="bg-white p-8 rounded-lg shadow-lg transform transition duration-500 hover:scale-105">
                <h2 class="text-3xl font-bold mb-6 text-blue-800">Envoyez-nous un message</h2>
                <form action="#" method="post" class="space-y-4">
                    <div>
                        <input type="text" id="name" name="name" placeholder="Votre nom" class="form-input rounded-md w-full">
                    </div>
                    <div>
                        <input type="email" id="email" name="email" placeholder="Votre email" class="form-input rounded-md w-full">
                    </div>
                    <div>
                        <input type="text" id="subject" name="subject" placeholder="Sujet" class="form-input rounded-md w-full">
                    </div>
                    <div>
                        <textarea id="message" name="message" placeholder="Votre message" class="form-textarea rounded-md w-full h-32"></textarea>
                    </div>
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-4 rounded transition ease-in-out duration-300">Envoyer le message</button>
                </form>
            </div>
        </div>

        <!-- About Section -->
        <div class="w-full lg:w-1/2 lg:pl-4">
            <div class="bg-white p-8 rounded-lg shadow-lg transform transition duration-500 hover:scale-105">
                <h2 class="text-3xl font-bold mb-6 text-blue-800">À propos de LinkEat</h2>
                <p class="text-lg text-gray-700">
                    LinkEat est une plateforme en ligne qui met en relation les restaurants et les clients. Nous offrons une expérience de commande pratique et facile pour les utilisateurs et aidons les restaurants à atteindre un plus large public.
                </p>
                <p class="text-lg text-gray-700 mt-4">
                    Avec LinkEat, vous pouvez découvrir de délicieux plats, passer des commandes en ligne et vous faire livrer directement chez vous.
                </p>
            </div>

            <!-- Location Section -->
            <div class="mt-8 bg-white p-8 rounded-lg shadow-lg transform transition duration-500 hover:scale-105">
                <h2 class="text-3xl font-bold mb-6 text-blue-800">Nos emplacements</h2>
                <p class="text-lg text-gray-700 mb-6">Venez nous rendre visite à notre bureau principal :</p>
                <p class="text-lg text-gray-700">Senlis, France</p>
            </div>
        </div>
    </div>
{% endblock %}