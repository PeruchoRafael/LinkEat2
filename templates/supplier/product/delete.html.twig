<div class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md">
    {{ form_start(confirmationForm, {'attr': {'class': 'space-y-4'}}) }}
    
    <p class="text-lg text-gray-800 mb-4">Voulez-vous vraiment supprimer le produit "{{ product.name }}" ?</p>
    
    <div class="flex items-center space-x-2">
        {{ form_widget(confirmationForm.confirm, {'attr': {'class': 'form-checkbox h-4 w-4 text-indigo-600'}}) }}
        <label for="{{ confirmationForm.confirm.vars.id }}" class="text-sm text-gray-700">Oui, je confirme la suppression</label>
    </div>

    {{ form_end(confirmationForm) }}
</div>
