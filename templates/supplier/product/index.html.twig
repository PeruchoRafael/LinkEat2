{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block body %}

<div class="container mx-auto my-12 p-8 bg-white shadow-lg rounded-lg">
    <h1 class="text-4xl font-extrabold mb-8 text-center text-gray-800">Liste des Produits</h1>

    <div class="mb-8">
        <a href="{{ path('product_new') }}" class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition-colors duration-200">Ajouter un produit</a>
    </div>

    <div class="overflow-x-auto rounded-lg">
        <table class="min-w-full table-auto">
            <thead class="bg-blue-700 text-white rounded-t-lg">
                <tr>
                    <th class="py-2 px-4">Nom</th>
                    <th class="py-2 px-4">Description</th>
                    <th class="py-2 px-4">Prix</th>
                    <th class="py-2 px-4">Quantité</th>
                    <th class="py-2 px-4">Catégorie</th>
                    <th class="py-2 px-4">Actions</th>
                </tr>
            </thead>

            <tbody class="text-gray-700">
                {% for product in products %}
                    <tr class="border-b last:border-b-0">
                        <td class="py-2 px-4">{{ product.name }}</td>
                        <td class="py-2 px-4">{{ product.description }}</td>
                        <td class="py-2 px-4">{{ product.price }} €</td>
                        <td class="py-2 px-4">{{ product.quantity }}</td>
                        <td class="py-2 px-4">{{ product.category.name }}</td>
                        <td class="py-2 px-4">
                            <a href="{{ path('product_edit', {'id': product.id}) }}" class="text-blue-500 hover:text-blue-600">Modifier</a>
                            <span class="mx-1">|</span>
                            <a href="{{ path('product_delete', {'id': product.id}) }}" class="text-red-500 hover:text-red-600">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="py-2 px-4" colspan="6">Aucun produit trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
