{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block body %}

    <h1>Liste des produits</h1>

    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Descripton</th>
                <th>Price</th>
            </tr>
        </thead>

    {% for product in products %}

    <tr>
    <td>{{ product.name }} </td>
    <td>{{ product.description }}</td>
    <td>{{ product.price }}</td>
    <td>{{ product.quantity }}</td>
    <td>{{ product.category.name }}</td>


     <td><a href="{{ path('product_edit', {
                        id: product.id
                    }) }}">Modifier</a></td>
    <td><a href="{{ path('product_delete',{
        id: product.id
    })
    }} ">Supprimer</a></td>     


    {% else %}
    <tr>
        <td colspan="2" Aucun Produits</td>
    </tr>
    {% endfor %}

    </tbody>
    </table>

    <a href="{{ path('product_new') }}">Ajouter un produit</a>
{% endblock %}
