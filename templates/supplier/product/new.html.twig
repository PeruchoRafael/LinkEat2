{% extends 'base.html.twig' %}

{% block title %}Ajout d'un produit{% endblock %}

{% block body %}
    <div class="bg-gray-100 min-h-screen flex items-center justify-center">
        <div class="bg-white p-8 rounded-md shadow-md max-w-md w-full">
            <h1 class="text-4xl font-extrabold mb-6 text-blue-500">Ajouter un produit</h1>

            <form method="post" action="{{ path('product_new') }}" class="space-y-4">
                {{ form_start(form) }}

                <div>
                    <label for="{{ form.name.vars.id }}" class="block text-sm font-medium text-gray-700">Nom du produit</label>
                    {{ form_row(form.name, {'attr': {'class': 'form-input mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div>
                    <label for="{{ form.description.vars.id }}" class="block text-sm font-medium text-gray-700">Description</label>
                    {{ form_row(form.description, {'attr': {'class': 'form-input mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div>
                    <label for="{{ form.price.vars.id }}" class="block text-sm font-medium text-gray-700">Prix</label>
                    {{ form_row(form.price, {'attr': {'class': 'form-input mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
                    {{ form_errors(form.price) }}
                </div>

                <div>
                    <label for="{{ form.quantity.vars.id }}" class="block text-sm font-medium text-gray-700">Quantité</label>
                    {{ form_row(form.quantity, {'attr': {'class': 'form-input mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
                    {{ form_errors(form.quantity) }}
                </div>

                <div>
                    <label for="{{ form.category.vars.id }}" class="block text-sm font-medium text-gray-700">Catégorie</label>
                    {{ form_row(form.category, {'attr': {'class': 'form-select mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm'}}) }}
                    {{ form_errors(form.category) }}
                </div>

                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-md focus:outline-none focus:shadow-outline-blue active:bg-blue-800 transition duration-300 ease-in-out transform hover:scale-105">
                    Ajouter le produit
                </button>

                {{ form_end(form) }}

                <a href="{{ path('app_home_supplier') }}" class="text-gray-500 hover:underline block mt-4">Retour à la liste</a>
            </form>
        </div>
    </div>
{% endblock %}
