{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto px-4 sm:px-8">
    <div class="py-8">
        <div class="shadow overflow-hidden rounded border-b border-gray-200">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-800 text-black">
                <div class="mb-4">
                    <input type="text" id="searchInput" class="border-2 border-gray-300 bg-white h-10 px-5 pr-16 rounded-lg text-sm focus:outline-none" placeholder="Rechercher...">
                </div>
                    <tr>
                        <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Nom du client</th>
                        <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Nombre de produits commandés</th>
                        <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Date commande</th>
                        <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Statut</th>
                        <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Détails commande</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    {% for order in orders %}
                        <tr class="border-t border-gray-200">
                            <td class="px-4 py-3">{{ order.restaurateur.email }}</td>
                            <td class="px-4 py-3">{{ order.getNumberOfOrderLines }}</td>
                            <td class="px-4 py-3">{{ order.orderDate|date('Y-m-d H:i:s') }}</td>
                            <td class="px-4 py-3">{{ order.status }}</td>
                            <td class="px-4 py-3">
                                <a href="{{ path('order_details', {'id': order.id}) }}" class="text-blue-500 hover:text-blue-700">Voir détails</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="py-4 px-6" colspan="5">Aucune commande n'a été passée.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="{{ asset('js/searchCommande.js') }}"></script>

{% endblock %}