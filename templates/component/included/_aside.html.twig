<script>
document.addEventListener("DOMContentLoaded", function() {
  // Sélectionner le bouton qui contrôle la liste déroulante
  const dropdownToggle = document.querySelector('[data-collapse-toggle="dropdown-example"]');

  // Ajouter un écouteur d'événement de clic sur ce bouton
  dropdownToggle.addEventListener("click", function() {
    // Sélectionner l'élément UL que vous souhaitez afficher/cacher
    const dropdownMenu = document.getElementById("dropdown-example");

    // Vérifier si l'élément est déjà affiché (ne contient pas la classe 'hidden')
    if (dropdownMenu.classList.contains("hidden")) {
      // Montrer la liste déroulante
      dropdownMenu.classList.remove("hidden");
    } else {
      // Cacher la liste déroulante
      dropdownMenu.classList.add("hidden");
    }
  });
});
</script>
