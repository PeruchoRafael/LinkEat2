                    <a class="my-1 text-sm text-gray-700 dark:text-gray-200 hover:text-blue-500 md:mx-4 md:my-0" href="{{ path('app_contact') }}">Nous contacter</a>
                {% elseif is_granted('ROLE_RESTAURATEUR') %}
                    <a class="my-1 text-sm text-gray-700 dark:text-gray-200 hover:text-blue-500 md:mx-4 md:my-0" href="{{ path('home_restaurateur') }}">Accueil</a>
                    <a class="my-1 text-sm text-gray-700 dark:text-gray-200 hover:text-blue-500 md:mx-4 md:my-0" href="{{ path('suppliers') }}">Fournisseurs</a>
