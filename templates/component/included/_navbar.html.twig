                {% else %}
                    <a class="my-1 text-sm text-gray-700 dark:text-gray-200 hover:text-blue-500 md:mx-4 md:my-0" href="{{ path('app_aboutUs') }}">À propos de nous</a>
                    <a class="my-1 text-sm text-gray-700 dark:text-gray-200 hover:text-blue-500 md:mx-4 md:my-0" href="{{ path('app_contact') }}">Nous contacter</a>
                    <a class="my-1 text-sm text-gray-700 dark:text-gray-200 hover:text-blue-500 md:mx-4 md:my-0" href="{{ path('app_login') }}">Connexion</a>
                    <a class="my-1 text-sm text-gray-700 dark:text-gray-200 hover:text-blue-500 md:mx-4 md:my-0" href="{{ path('app_sign_up') }}">Inscription</a>
